<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homepage">

    <fragment
        android:id="@+id/homepage"
        android:name="com.example.lico.Homepage"
        android:label="Homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_homepage_to_discount"
            app:destination="@id/discount" />
        <action
            android:id="@+id/action_homepage_to_resource"
            app:destination="@id/resource" />
    </fragment>
    <fragment
        android:id="@+id/discount"
        android:name="com.example.lico.Discount"
        android:label="Discounts"
        tools:layout="@layout/fragment_discount" />
    <fragment
        android:id="@+id/resource"
        android:name="com.example.lico.resourceItems.Resource"
        android:label="fragment_resource"
        tools:layout="@layout/fragment_resource" />


</navigation>